<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aitos.xenon.block.mapper.PoggRewardMapper">

    <sql id="tableName">pogg_reward</sql>

    <insert id="save">
        insert into <include refid="tableName"/> (height,verifiable_evidence,start_epoch,end_epoch,rewards_json,status,create_time)
        value (#{height},#{verifiableEvidence},#{startEpoch},#{endEpoch},#{rewardsJson},#{status},#{createTime})
    </insert>

    <update id="updateStatus">
        update <include refid="tableName"/> set status=#{status},msg=#{msg},update_time=#{updateTime} where id=#{id}
    </update>

    <select id="findListUnIssued" resultType="com.aitos.xenon.block.domain.PoggReward">
        select * from <include refid="tableName"/> where status=0
    </select>

    <select id="findAll" resultType="com.aitos.xenon.block.domain.PoggReward">
        select * from <include refid="tableName"/>
    </select>

    <insert id="savePoggRewardMiner" parameterType="com.aitos.xenon.block.api.domain.PoggRewardMiner">
        insert into  pogg_reward_miner(address,amount,owner_address,create_time)
            value (#{address},#{amount},#{ownerAddress},now())
    </insert>

    <select id="getReportByMinerAddress" resultType="com.aitos.xenon.block.api.domain.PoggReport">
        select * from pogg_report where address = #{queryParams.address} order by create_time desc
    </select>

    <select id="getRewardByMinerAddress" resultType="com.aitos.xenon.block.api.domain.PoggRewardMiner">
        select * from pogg_reward_miner where address = #{queryParams.address} order by create_time desc
    </select>
</mapper>
