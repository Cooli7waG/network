<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aitos.xenon.account.mapper.TransactionMapper">

    <sql id="tableName">transaction</sql>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into <include refid="tableName"/> (from_address,account_id,height,hash,tx_type,status,data,create_time)
        value (#{fromAddress},#{accountId},#{height},#{hash},#{txType},#{status},#{data},NOW())
    </insert>
    <select id="findByAddress" resultType="com.aitos.xenon.account.domain.Transaction">
        select * from <include refid="tableName"/> where address=#{address}
    </select>
    <select id="query" resultType="com.aitos.xenon.account.domain.Transaction">
        select * from <include refid="tableName"/> where hash=#{txHash}
    </select>
    <select id="list" resultType="com.aitos.xenon.account.domain.Transaction">
        select * from <include refid="tableName"/>
        <where>
            <if test="queryParams.height!=null">
                height=#{queryParams.height}
            </if>
            <if test="queryParams.hash!=null and queryParams.hash!=''">
                and hash=#{queryParams.hash}
            </if>
            <if test="queryParams.fromAddress!=null and queryParams.fromAddress!=''">
                and from_address=#{queryParams.fromAddress}
            </if>
        </where>
        order by create_time desc
    </select>

    <insert id="saveReport" useGeneratedKeys="true" keyProperty="id" parameterType="com.aitos.xenon.account.domain.PoggReportMiner">
        insert into pogg_report_miner(address,power,total,hash,height,timestamp,create_time)
        value (#{address},#{power},#{total},#{hash},#{height},#{timestamp},NOW())
    </insert>

    <insert id="saveReward" useGeneratedKeys="true" keyProperty="id" parameterType="com.aitos.xenon.account.domain.PoggRewardMiner">
        insert into pogg_reward_miner(address,amount,owner_address,hash,height,reward_percent,create_time)
            value (#{address},#{amount},#{ownerAddress},#{hash},#{height},#{rewardPercent},NOW())
    </insert>

    <select id="getReportByMinerAddress" resultType="com.aitos.xenon.account.domain.PoggReportMiner">
        select * from pogg_report_miner where address = #{queryParams.address} order by create_time desc
    </select>

    <select id="getRewardByMinerAddress" resultType="com.aitos.xenon.account.domain.PoggRewardMiner">
        select * from pogg_reward_miner where address = #{queryParams.address} order by create_time desc
    </select>

    <select id="getAll" resultType="com.aitos.xenon.account.domain.Transaction">
        SELECT * FROM transaction WHERE tx_type in(8,9)ORDER BY id;
    </select>
</mapper>
